"use client"
import { useScroll, useTransform, motion } from "motion/react"
import Image from "next/image"
import { useRef } from "react"

export const ImageHolder = () => {

	const divRef = useRef<HTMLDivElement>(null)
	const { scrollYProgress } = useScroll({
		target: divRef,
		offset: ["start end", "end start"]
	})

	const transformY = useTransform(scrollYProgress, [0, 1], [-50, 50])

	return (
		<div className="overflow-hidden w-[1100px] h-[600px] 	">
			<motion.div
				style={{
					y: transformY
				}}

				className="w-[calc(100% + 100px)] h-[calc(100% + 100px)]">
				<Image src={"/resort1.jpg"} className="object-cover w-full h-full" width={1000} height={800} alt="resort-1" />
			</motion.div>
		</div>
	)
}
